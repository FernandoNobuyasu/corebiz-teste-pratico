.showcase
    margin-bottom 70px

    &__container
        margin 0 auto
        max-width 1200px
        @media (max-width 1200px)
            padding 0 15px

    &__title
        position relative
        margin-bottom 50px
        color #000
        font-weight 900
        font-size 20px
        line-height 27px

        &:after
            position absolute
            bottom -8px
            left 0
            width 65px
            height 5px
            background #C0C0C0
            content ''

    .slick
        &-list
            margin 0 -10px
            @media (min-width 1300px)
                margin 0 -50px

        &-slide>div
            padding 0 10px
            @media (min-width 1300px)
                padding 0 50px

        &-arrow
            position absolute
            top 50%
            z-index 1
            display flex
            justify-content center
            align-items center
            width 22px
            height 22px
            transform translateY(-50%)

            svg
                transition all 0.2s ease-in-out

            &:hover
                svg
                    fill #F8475F

        &-next
            right 0

            @media (min-width 1300px)
                right -44px

        &-prev
            left 0

            @media (min-width 1300px)
                left -44px

        &-dots
            text-align center
            li
                display inline
                margin 0 6px
                padding 0
                width 10px
                height 10px

                &.slick-active
                    button
                        background #F8475F

            button
                border-radius 50%
                width 10px
                height 10px
                background #BDBDBD
                font-size 0
                transition all 0.2s ease-in-out