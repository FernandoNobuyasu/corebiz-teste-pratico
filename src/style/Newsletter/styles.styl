
#newsletter
    background-color: #F2F2F2;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 25px 10px;
    h2
        font-weight: 700;
        font-size: 22px;
        color: #333

    input
        background-color: #fff;
        font-size: 14px;
        padding: 16px;
        color: #585858;
        border: 1px solid #fff;
        border-radius: 5px;
        width: 280px;
        margin-right: 8px;
    
    .send-button
        background-color: #000;
        color: #fff;
        font-size: 14px;
        font-weight: 700;
        line-height: 14px;
        text-align: center;
        border-radius: 5px;
        padding: 8px 28px;
        height: 48px;
        transition: all .2s ease-in-out;
        &:hover
            background: #f8475f;

    @media (max-width: 910px)
        input,
        button 
            margin: 8px 0;
            width: 100%;