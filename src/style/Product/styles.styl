.product
    &:hover
        .product
            &__info
                background: #E6E8EA;
            &__buy
                visibility: visible;
                opacity: 1;

    &__item
        display: block !important;
        margin: 0 auto;
        cursor: pointer;

    &__info
        text-align: center;
        padding-bottom: 15px;
        transition: all 0.2s ease-in-out;

        @media (max-width: 991px)
            min-height: 175px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-between;

    &__figure
        overflow: hidden;
        position: relative;

        img
            width: 100%;
            transition: all 0.2s ease-in-out;

    &__seal
        position: absolute;
        z-index: 1;
        right: 0;

        p
            font-size: 16px;
            font-weight: 900;
            line-height: 20px;
            color: #fff;
            position: absolute;
            z-index: 2;
            top: 12px;
            right: 8px;

        &:after
            content: '';
            position: absolute;
            z-index: 1;
            right: 0;
            width: 0;
            height: 0;
            border-top: 0px solid transparent;
            border-bottom: 72px solid transparent;
            border-right: 82px solid #F8475F;

    &__name
        font-weight: 600;
        font-size: 12px;
        line-height: 16px;
        text-align: center;
        color: #7A7A7A;
        padding: 6px 0 0 0;

    &__rating
        text-align: center;

    &__prices
        min-height: 60px;
        display: flex;
        flex-direction: column;
        justify-content: end;
        margin-bottom: 8px;

        &--promotion
            font-weight: 400;
            font-size: 12px;
            line-height: 16px;
            text-align: center;
            color: #7A7A7A;

        &--regular
            font-weight: 700;
            font-size: 18px;
            line-height: 25px;
            text-align: center;
            color: #000000;

        &--installments
            font-weight: 400;
            font-size: 11px;
            line-height: 15px;
            text-align: center;
            color: #7A7A7A;

    &__buy
        font-family: 'Nunito', sans-serif;
        width: 125px;
        background: #000000;
        border-radius: 5px;
        height: 32px;
        color: #fff;
        transition: all 0.2s ease-in-out;
        visibility: hidden;
        opacity: 0;
        @media (max-width: 991px)
            visibility: visible;
            opacity: 1;

        &:hover
            background: #f8475f;