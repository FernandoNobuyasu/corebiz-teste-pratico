.header
    position sticky
    top 0
    z-index 999
    background #fff
    box-shadow 0 5px 10px #0000000d

    &__container
        display flex
        justify-content space-between
        align-items center
        margin 0 auto
        max-width 1200px
        height 80px
        @media (max-width 1200px)
            padding 0 20px

        @media (max-width 991px)
            position relative
            height 60px

    &__menu
        svg
            fill #000

        @media (min-width 992px)
            display none

    &__logo
        @media (min-width 992px)
            margin-right 120px

        svg
            fill #000
            @media (max-width 991px)
                max-width: 109px

    &__search
        flex 0 100%
        margin-right 45px

        @media (max-width 991px)
            position absolute
            top 100%
            left 0
            margin 0
            padding 10px 0
            width 100%
            background #fff

        .search
            position relative

            @media (max-width 991px)
                margin 0 20px

            &__input
                font-size 13px
                padding 3px 0
                width 100%
                border none
                border-bottom 1px solid #7a7a7a

            &__button
                position absolute
                right 0
                cursor pointer

                &:hover
                    svg
                        fill #F8475F

                svg
                    transition all 0.2s ease-in-out
                    fill #000

    &__account
        margin-right 20px

        @media (max-width 991px)
            display none

        .account
            display flex
            align-items center
            text-decoration none
            white-space nowrap
            gap 5px

            &:hover
                svg
                    fill #F8475F

                span
                    color #F8475F

            &__label
                color #7A7A7A
                font-weight 400
                font-size 13px
                line-height 18px
                transition all 0.2s ease-in-out

            svg
                transition all 0.2s ease-in-out
                fill #000

    &__minicart

        .minicart
            display flex
            align-items center
            cursor pointer

            &:hover
                svg
                    fill #F8475F

            svg
                transition all 0.2s ease-in-out
                fill #000

            &__qnt
                margin-left 5px
                width 14px
                height 14px
                border-radius 50%
                background #F8475F
                color #FFFFFF
                text-align center
                font-weight 700
                font-size 10px
                line-height 14px
